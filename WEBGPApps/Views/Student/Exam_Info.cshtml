@using WEBGPApps.Models
@model List<WEBGPApps.Models.Quiz>



<div class="BG">
    <div class="container">
        <div style="text-align:center; color:white;">
        @foreach (var item in Model)
{
<div class="row wow slideInDown">
    <div class="col-md-4">
        <form asp-action="Save_AQuiz" asp-route-id="@item.QuizId">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <h2>@item.Q1</h2>
         <select asp-for="@item.Ans1" class="form-control" autocomplete="username" aria-required="true">
           <option value="True" >True</option>
           <option value="False">False</option>
         </select>                
         <span asp-validation-for="@item.Ans1" class="text-danger"></span>

          <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                                <h2>@item.Q2</h2>
         <select asp-for="@item.Ans2" class="form-control" autocomplete="username" aria-required="true">
           <option value="True" >True</option>
           <option value="False">False</option>
         </select>                
         <span asp-validation-for="@item.Ans2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate QR Code" class="btn btn-primary text-center" />
            </div>
        </form>
    </div>
</div>}
</div>
</div>
</div>
